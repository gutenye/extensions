{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "bitcoin-price",
  "title": "Bitcoin Price",
  "description": "See the current price of Bitcoin in various currencies.",
  "icon": "btc-price-icon.png",
  "author": "futantan",
  "contributors": [
    "gutenye"
  ],
  "categories": [
    "Web",
    "Finance"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "bitcoin-menu-bar",
      "title": "Bitcoin Price",
      "subtitle": "Crypto",
      "description": "See the current price of Bitcoin",
      "mode": "menu-bar",
      "interval": "1m"
    }
  ],
  "preferences": [
    {
      "name": "currency",
      "title": "Currency",
      "description": "Currency to use for the price",
      "type": "dropdown",
      "required": false,
      "default": "USD",
      "data": [
        {
          "title": "ðŸ‡ºðŸ‡¸ United States dollar",
          "value": "USD"
        },
        {
          "title": "ðŸ‡ªðŸ‡º Euro",
          "value": "EUR"
        },
        {
          "title": "ðŸ‡¬ðŸ‡§ Pound Sterling",
          "value": "GBP"
        },
        {
          "title": "ðŸ‡¯ðŸ‡µ Japanese Yen",
          "value": "JPY"
        },
        {
          "title": "ðŸ‡§ðŸ‡· Brazilian Real",
          "value": "BRL"
        }
      ]
    },
    {
      "name": "style",
      "title": "Style",
      "description": "Style to display on the system menubar",
      "type": "dropdown",
      "required": false,
      "default": "price",
      "data": [
        {
          "title": "$1,234.56",
          "value": "price"
        },
        {
          "title": "100-$1,234-200",
          "value": "low-price-high"
        },
        {
          "title": "1% $1,234 2%",
          "value": "lowPercent-price-highPrecent"
        }
      ]
    },
    {
      "name": "source",
      "title": "Source",
      "description": "Source to use for fetching the price",
      "type": "dropdown",
      "required": false,
      "default": "CryptoCompare",
      "data": [
        {
          "title": "CryptoCompare",
          "value": "CryptoCompare"
        },
        {
          "title": "Binance Spot",
          "value": "BinanceSpot"
        },
        {
          "title": "Binance Futures",
          "value": "BinanceFutures"
        }
      ]
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.39.3",
    "@raycast/utils": "^1.4.8"
  },
  "devDependencies": {
    "@types/node": "~16.10.0",
    "@types/react": "^17.0.28",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "ray publish"
  }
}